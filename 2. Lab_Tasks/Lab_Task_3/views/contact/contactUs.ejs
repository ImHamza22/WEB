<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <h2 class="mb-4 text-center">Submit a Complaint</h2>

          <form action="/contact/complaint" method="POST">
            <div class="mb-3">
              <label for="orderId" class="form-label">Order ID</label>
              <input
                type="text"
                class="form-control"
                id="orderId"
                name="orderId"
                required
                placeholder="Enter your Order ID"
              />
            </div>

            <div class="mb-3">
              <label for="message" class="form-label">Complaint Message</label>
              <textarea
                class="form-control"
                id="message"
                name="message"
                rows="5"
                required
                placeholder="Describe your issue here"
              ></textarea>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">
                Submit Complaint
              </button>
              <a href="/contact/complaint/my" class="btn btn-outline-secondary btn-lg">
                View Complaint History
              </a>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</main>
