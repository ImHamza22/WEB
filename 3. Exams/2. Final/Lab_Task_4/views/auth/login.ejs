<style>
    .bg-site {
        background-color: #f8f7ed !important;
    }
</style>

<main class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-site">
                    <h3 class="mb-0">Login</h3>
                </div>

                <div class="card-body">

                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>

                    <form method="POST" action="/user/login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" 
                                class="form-control"
                                value="<%= typeof old !== 'undefined' ? old.email : '' %>" required >
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password"
                                class="form-control" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center bg-site">
                    <p class="mb-0">
                        Don't have an account? <a href="/user/register">Register</a>
                    </p>
                    <p class="mb-0">
                        Login as an Admin? <a href="/admin/login">Login</a>
                    </p>
                    
                </div>
            </div>
            <p class="py-3"><a href="/">Go back home</a></p>
        </div>
    </div>
</main>
