<div class="app-wrapper">
  <div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl mt-5">

      <form id="editProductForm" method="POST" action="/admin/products/edit/<%= product._id %>" enctype="multipart/form-data">
        <div class="row">
          <!-- Image & Upload -->
          <div class="col-md-6">
            <img src="/images/products/<%= product.image %>" alt="<%= product.name %>" class="img-fluid rounded mb-3" style="max-height: 500px; object-fit: cover;">
            <div class="mb-3">
              <label for="image" class="form-label">Change Product Image</label>
              <input type="file" name="image" id="image" class="form-control">
            </div>
          </div>

          <!-- Details -->
          <div class="col-md-6">
            <div class="mb-3">
              <label for="name" class="form-label">Product Name</label>
              <input type="text" id="name" name="name" class="form-control" value="<%= product.name %>" required>
            </div>

            <div class="mb-3">
              <label for="category" class="form-label">Category</label>
              <input type="text" id="category" name="category" class="form-control" value="<%= product.category %>" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control" rows="4" required><%= product.description %></textarea>
            </div>

            <div class="mb-3">
              <label for="price" class="form-label">Price (Rs.)</label>
              <input type="number" id="price" name="price" class="form-control" value="<%= product.price %>" required>
            </div>

            <div class="mb-3">
              <label for="stock" class="form-label">Stock</label>
              <input type="number" id="stock" name="stock" class="form-control" value="<%= product.stock %>" required>
            </div>

            <div class="d-flex gap-3 mt-4">
              <button type="submit" class="btn btn-primary">Save Changes</button>
              <a href="/admin/products" class="btn btn-secondary">Back to Products</a>
              <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit();">Delete Product</button>
            </div>
          </div>
        </div>
      </form>

      <!-- Hidden Delete Form -->
      <form id="deleteForm" action="/admin/products/delete/<%= product._id %>" method="POST" style="display: none;"></form>

    </div><!--//container-xl-->
  </div><!--//app-content-->
</div><!--//app-wrapper-->
